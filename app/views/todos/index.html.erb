<div class="w-full h-screen bg-gray-100 pt-8">
    <div class="bg-white p-3 max-w-md mx-auto">
        <div class="text-center">
            <h1 class="text-3xl font-bold">ToDo App</h1>
            <%= render "form", todo: Todo.new %>     
        </div>
        <div class="mt-8">
            <ul id="todos-list">
                <%= render @todos%>
            </ul>
        </div>
        <div class="mt-8">
            <%= button_to 'Reset', destroy_all_todos_path, method: :delete, data: { confirm: 'Are you sure?' }, class: "border-2 border-indigo-500 p-2 text-indigo-500 ml-4" %>
        </div>
    </div>    
</div>
